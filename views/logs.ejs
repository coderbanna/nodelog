<!-- logs.ejs -->
<%- include('./partials/header'); %>

<%- include('./partials/navbar'); %>

<!-- end of navbar navigation -->
<div class="content">
    <div class="container">
        <div class="row">
            <div class="col-md-12 page-header">
                <div class="page-pretitle">Overview</div>
            </div>
        </div>
        <div class="row">

                <div class="col-md-12 col-lg-12">
                    <div class="card">
                        <div class="card-header">Data logs</div>
                        <div class="card-body">
                            <div class="table-responsive">
                                <table class="table">
                                    <thead>
                                        <tr>
                                            <th>ID</th>
                                            <th>Title</th>
                                            <th>Msg</th>
                                            <th>Action</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <% data.forEach((item)=>{ %>
                                            <tr>
                                                <th scope="row">
                                                    <%= item.id %>
                                                </th>
                                                <td>
                                                    <%= item.title %>
                                                </td>
                                                <td>
                                                    <%= item.logmsg %>...
                                                </td>
                                                <td>
                                                    <a href="/log/<%= item.log_hash %>" target="_blank" type="button" class="btn btn-icon icon-left btn-info mb-2"><i class="fas fa-info-circle"></i></a>
                                                </td>
                                                
                                            </tr>
                                        <% }); %>
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>


        </div>
      
    </div>
</div>

<%- include('./partials/footer'); %>